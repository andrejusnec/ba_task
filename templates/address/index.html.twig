{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
        <form>
            <div class="input-group mb-3">
                <input type="text"
                       name="q"
                       class="form-control"
                       placeholder="Search..."
                       value="{{ app.request.query.get('q') }}"
                >
                <div class="input-group-append">
                    <button type="submit"
                            class="btn btn-outline-secondary">
                        <span class="fa fa-search"></span>
                    </button>
                </div>
            </div>
        </form>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th style="width: 50%" scope="col">Name</th>
                    <th style="width: 50%" scope="col">Phone number</th>
                </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr>
                        <th scope="row"><a style="text-decoration: none; color: black" href="{{ path('address/show', { id : item.id }) }}">{{ item.name }}</a></th>
                        <td>{{ item.number }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            No contacts found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}

