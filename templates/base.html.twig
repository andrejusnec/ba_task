              crossorigin="anonymous">
    {% endblock %}

</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            {% if app.user %}
            {{ include('static/navbar.html.twig') }}
            {% endif %}
            <div class="col py-3">
                {% for flash in app.flashes('success') %}
                    <div class="alert alert-success">{{ flash }}</div>
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>

