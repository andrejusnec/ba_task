{% extends 'base.html.twig' %}
{% block body %}
{{ form_start(form, { 'attr' : { 'class': 'row flex-column' } }) }}
<h2 class="col-md-3 offset-md-4" style="margin-top: 50px">Sharing is caring</h2>
<div class="my-custom-class-for-errors col-md-3 offset-md-4">
    {{ form_errors(form) }}
</div>
<div class="col-md-4" style="margin: auto">
    {{ form_row(form.receiver) }}
</div>
    <div class="col-md-4" style="margin: auto">
        <div>
            <label for="query_list_contact">Contact</label>
            <input class="form-control" id="query_list_contact" type="text" value="{{ addressBook.name }}" disabled="disabled">
        </div>
    </div>
<div class="col-md-3 offset-md-4" style="margin-top: 10px;">
    <button class="btn btn-primary" type="submit">Share</button>
</div>
{{ form_end(form) }}
{% endblock %}
<div class="card bg-secondary address-card" style="max-width: 460px; margin:auto">
    <h5 class="card-header" style="margin: auto">
        <img class="img-thumbnail address-picture" src="{{ addressBook.imagePath|imagine_filter('squared_thumbnail_small')}}"><br>
    </h5>
    <div class="card-body">
        <table class="table table-striped">
            <tbody>
            <tr>
                <td scope="row">Name</td>
                <td>{{ addressBook.name }}</td>
            </tr>
            <tr>
                <td scope="row">Phone number</td>
                <td>{{ addressBook.number }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div>
            <a style="display: inline-block" class="btn-success btn"
               href="{{ path('address/edit', { id : addressBook.id }) }}"><i class="fas fa-edit"></i></a>
            <form style="display: inline-block" method="post"
                  action="{{ path('address/delete', {id : addressBook.id}) }}">
                <button onclick="return confirm('Are you sure you want to delete this contact?');"
                        class="btn-danger btn" name="id"><i class="fas fa-trash"></i></button>
            </form>
            <form style="display: inline-block" method="post"
                  action="{{ path('querylist_share', {id : addressBook.id}) }}">
                <button class="btn-info btn share-button" name="addressBook"><i
                            class="fas fa-share-alt"></i></button>
            </form>
        </div>
    </div>
</div>
