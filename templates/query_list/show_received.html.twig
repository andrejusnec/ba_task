{% extends 'base.html.twig' %}
{% block body %}
<div class="card bg-secondary address-card" style="max-width: 460px; margin:auto">
    <h5 class="card-header" style="margin: auto">
        <img class="img-thumbnail address-picture" src="{{ querylist.addressRecord.imagePath|imagine_filter('squared_thumbnail_small')}}"><br>
    </h5>
    <div class="card-body">
        <table class="table table-striped">
            <tbody>
            <tr>
                <td scope="row">Name</td>
                <td>{{ querylist.AddressRecord.name }}</td>
            </tr>
            <tr>
                <td scope="row">Phone number</td>
                <td>{{ querylist.AddressRecord.number }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div>
            <div>
                <form style="display: inline-block" method="post"
                      action="{{ path('query_list/resolve', {id : querylist.id, action : 'Accept' }) }}">
                    <button class="btn-sm btn-success btn">Accept</button>
                </form>
                <form style="display: inline-block" method="post"
                      action="{{ path('query_list/resolve', {id : querylist.id, action : 'Reject'}) }}">
                    <button onclick="return confirm('Are you sure you want to reject this contact?');"
                            class="btn-sm btn-danger btn">Reject
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}